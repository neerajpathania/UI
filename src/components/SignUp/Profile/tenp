const handleDeleteChapter = () => {
    toast.dismiss();
    dispatch(
      deleteQuestions({
        reportId: reportId,
        chapterName: deleteChapter?.chapter,
      })
    )
      .unwrap()
      .then(() => {
        setOpenDelete(false);
        toast.success("Chapter Deleted Successfully");
      })
      .then(() =>
        dispatch(getQuestions(reportId))
          .unwrap()
          .then((res: any) => {
            setChapters(res?.data?.[0]?.pillars);
            const filteredQuestions = res?.data?.[0]?.pillars?.find(
              (question: any) => question.name === selectedChapter
            );

            setQuestions(filteredQuestions?.question || []);
          })
      );
  };